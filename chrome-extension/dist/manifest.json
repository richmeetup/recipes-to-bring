{
    "manifest_version": 3,
    "name": "Recipes to Bring! - Chrome Extension",
    "version": "0.1",
    "action": {},
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["tabs", "scripting"],
    "content_scripts": [
        {
            "matches": ["https://cooking.nytimes.com/recipes/*"],
            "js": ["content.js"],
            "run_at": "document_idle"
        }
    ],
    "host_permissions": [
        "https://cooking.nytimes.com/recipes/*"
    ]
}